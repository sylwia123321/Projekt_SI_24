{% extends 'base.html.twig' %}

{% block title %}
    {{ 'label.category_details'|trans }}
{% endblock %}

{% block body %}
    <h1>{{ 'label.category_details'|trans }}</h1>

    <table class="table">
        <tbody>
        <tr>
            <th>Title</th>
            <td>{{ category.title }}</td>
        </tr>
        <tr>
            <th>Created At</th>
            <td>{{ category.createdAt|date('Y-m-d H:i:s') }}</td>
        </tr>
        <tr>
            <th>Updated At</th>
            <td>{{ category.updatedAt|date('Y-m-d H:i:s') }}</td>
        </tr>
        </tbody>
    </table>

    <a href="{{ path('category_index') }}">{{ 'label.back_to_list'|trans }}</a>
{% endblock %}
